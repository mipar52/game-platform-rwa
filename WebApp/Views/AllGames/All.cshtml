@model List<WebApp.ViewModels.GameViewModel>
@{
    ViewData["Title"] = "All Games";
}

<div class="container mt-5">
    <h2 class="text-danger">All Games</h2>
    <div class="row mt-4">
        @foreach (var game in Model)
        {
            <div class="col-md-4 mb-4">
                <a asp-controller="GameDetails" asp-action="Index" asp-route-id="@game.Id" class="text-decoration-none">
                    <div class="card bg-dark text-light border-danger h-100">
                        <div class="card-body">
                            <h5 class="card-title">@game.Name</h5>
                            <p class="card-text">@game.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
