@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Welcome to the Arena";
    var user = HttpContextAccessor.HttpContext?.User;
    var role = user?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
}
<link rel="stylesheet" href="~/css/home.css" />

<div class="home-wrapper">
    @if(role == "Admin") {
        <a class="nav-link text-danger fw-bold" target="_blank" href="http://localhost:5196/logs/login.html">Platform Logs</a>
    }
   
    <div class="overlay-text">
        <h1 class="main-title">Welcome, Epic Gamer!</h1>
        <p class="subtitle">Game Platform RWA — the best game search & review site.</p>
        <a asp-controller="GameList" asp-action="All" class="action-btn">VIEW ALL GAMES</a>
        <a asp-controller="GameType" asp-action="Index" class="action-btn">LET US HELP YOU FIND GAMES</a>
    </div>
    <audio autoplay loop hidden>
        <source src="https://example.com/aatrox-theme.mp3" type="audio/mpeg">
    </audio>

</div>
