@model WebApp.ViewModels.GameTypeGenreSelectionViewModel

@{
    ViewData["Title"] = "Game Categories";
}

<form asp-controller="GameList" asp-action="Index" method="post">
    <h2>Select Game Type</h2>
    <select asp-for="SelectedGameTypeId" asp-items="@(new SelectList(Model.GameTypes, "Id", "Name"))" class="form-control"></select>

    <h3 class="mt-4">Select Genres</h3>
    @foreach (var genre in Model.GameGenres)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="SelectedGenreIds" value="@genre.Id" id="genre_@genre.Id" />
            <label class="form-check-label" for="genre_@genre.Id">@genre.Name</label>
        </div>
    }

    <button type="submit" class="btn btn-danger mt-4">Browse Games</button>
</form>
