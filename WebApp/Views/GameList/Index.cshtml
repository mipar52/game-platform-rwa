@model List<WebApp.ViewModels.GameListViewModel>

@{
    ViewData["Title"] = "Game List";
}

<h2>Games</h2>

@if (!Model.Any())
{
    <p>No games found for the selected filters.</p>
}
else
{
    <div class="row">
        @foreach (var game in Model)
        {
            <div class="col-md-4 mb-4">
                <a asp-controller="GameDetails" asp-action="Index" asp-route-id="@game.Id" class="text-decoration-none">
                    <div class="card bg-dark text-light border-danger h-100">
                        <div class="card-body">
                            <h5 class="card-title">@game.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@game.GenreName - @game.TypeName</h6>
                            <p class="card-text">@game.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
