<div class="container mt-5">
    <h2 class="text-danger mb-4">Account Settings</h2>

    <div class="row">
        <div class="col-md-6 mb-3">
            <a asp-controller="Account" asp-action="Manage" class="btn btn-outline-danger btn-lg w-100">
