@{
    ViewData["Title"] = "Account Settings";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container mt-5 text-light">
    <h1 class="neon-text text-center mb-4">🎮 Gamer Profile Settings</h1>
    <p class="lead text-center mb-5">Manage your account and reviews like a true legend.</p>

    <div class="row justify-content-center">
        <div class="col-md-6 mb-4">
            <div class="card bg-dark border-danger shadow-lg">
                <div class="card-body text-center">
                    <h4 class="card-title text-danger"><i class="bi bi-gear-fill"></i> Manage Account</h4>
                    <p class="card-text text-light">Update your username, email, or change your password to stay sharp.</p>
                    <a asp-controller="Account" asp-action="Manage" class="btn btn-danger btn-lg w-100">
                        Enter Command Center
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card bg-dark border-warning shadow-lg">
                <div class="card-body text-center">
                    <h4 class="card-title text-warning"><i class="bi bi-chat-left-dots-fill"></i> My Reviews</h4>
                    <p class="card-text text-light">Edit or delete your game reviews — your opinions matter!</p>
                    <a asp-controller="Account" asp-action="Reviews" class="btn btn-warning btn-lg w-100 text-dark">
                        Manage Reviews
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .neon-text {
        font-family: 'Orbitron', sans-serif;
        text-shadow: 0 0 5px #FF3131, 0 0 10px #FF3131, 0 0 20px #FF3131;
        color: #fff;
    }

    body {
        background-color: #1a1a1a;
    }

    .card {
        border-radius: 16px;
    }

        .card:hover {
            transform: scale(1.03);
            transition: 0.3s ease;
        }
</style>
